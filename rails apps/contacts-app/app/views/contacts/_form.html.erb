<%= form_tag url, method: form_method do %>

  <p>Please correct the <%= @contact.errors.full_messages.count %> error(s) below: </p>
  <% @contact.errors.full_messages.each do |error| %>
    <li>
    <ul><%= error %></ul>
    </li>
  <% end %>

  <div>
  <%= label_tag :first_name %>
  <%= text_field_tag :first_name, @contact.first_name %>
  </div>
  <div>
  <%= label_tag :middle_name %>
  <%= text_field_tag :middle_name, @contact.middle_name %>
  </div>
  <div>
  <%= label_tag :last_name %>
  <%= text_field_tag :last_name, @contact.last_name %>
  </div>
  <div>
  <%= label_tag :address %>
  <%= text_field_tag :address, @contact.address %>
  </div>
  <div>
  <%= label_tag :email %>
  <%= text_field_tag :email, @contact.email %>
  </div>
  <div>
  <%= label_tag :phone_number %>
  <%= text_field_tag :phone_number, @contact.phone_number %>
  </div>
  <div>
  <%= label_tag :bio %>
  <%= text_field_tag :bio, @contact.bio %>
  </div>

  <%= submit_tag message %>

<% end %>