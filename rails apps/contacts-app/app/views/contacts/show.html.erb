<div class="card my-card">
  <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
  <div class="card-block">
    <h4 class="card-title"><%= @contact.full_name %></h4>
    <p class="card-text">first: <%= @contact.first_name %></p>
    <p class="card-text">last: <%= @contact.last_name %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Your lat and long are: <%= @contact.latitude %>, <%= @contact.longitude %>, <%= @contact.longitude %></li>
    <li class="list-group-item">email: <%= @contact.email %></li>
    <li class="list-group-item">phone number: <%= @contact.phone_number %></li>
    <li class="list-group-item">japanese phone number: <%= @contact.japanese_prefix %></li>
    <li class="list-group-item">bio: <%= @contact.bio %></li>
    <li class="list-group-item">
    You are a member of the following groups:<br>
    <ul>
    <% if @contact.groups %>
      <% @contact.groups.each do |group| %>
      <li><%= group.name %></li>
      <% end %>
    <% end %>
    </ul>
    </li>
  </ul>
  <div class="card-block">
    <a href="/contacts/#{@contact.id}/edit" class="card-link">Edit me</a><br>
    <a href="/contacts/#{@contact.id}" class="card-link">Delete me</a>
  </div>
</div>
